@model IEnumerable<BlogSite.Models.Blog>
@{
    ViewBag.Title = "Blog Yazıları";
}
<div class="app-main__inner">
    <div class="row">
        <div class="col-lg-12">
            <a href="/BlogPost/Create" class="mb-2 mr-2 btn btn-warning">Yeni Ekle</a>
            <div class="main-card mb-3 card">
                <div class="card-body">
                    <h5 class="card-title">Blog Yazıları</h5>
                    <table class="mb-0 table">
                        <thead>
                            <tr>
                                <th>Blog Konusu</th>
                                <th>Blog İçeriği</th>
                                <th>Blog Kategorisi</th>
                                <th>Tarih</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Content)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Category.CategoryName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.BlogDate)</td>
                                    <td>
                                        <a href="/BlogPost/Edit/@item.BlogId" class="mb-2 mr-2 btn btn-info">Düzelt</a>
                                        <a href="/BlogPost/Delete/@item.BlogId" class="mb-2 mr-2 btn btn-danger">Sil</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

