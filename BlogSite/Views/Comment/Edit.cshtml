@model BlogSite.Models.Comment

@{
    ViewBag.Title = "Yorumları Onayla";
}
<div class="card-body">
    <h5 class="card-title">Yorum</h5>
    <form class="" method="post" action="/Comment/Edit/@Model.CommentId">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CommentId)
        <div class="position-relative row form-group">
            <label for="Name" class="col-sm-2 col-form-label">Kişi</label>
            <div class="col-sm-10">
                <input disabled name="Name" value="@Model.Name" type="text" class="form-control" />
            </div>
        </div>
        <div class="position-relative row form-group">
            <label for="E_mail" class="col-sm-2 col-form-label">Kişinin Emaili</label>
            <div class="col-sm-10">
                <input disabled name="E_mail" value="@Model.E_mail" type="text" class="form-control" />
            </div>
        </div>
        <div class="position-relative row form-group">
            <label for="Content" class="col-sm-2 col-form-label">Yorum</label>
            <div class="col-sm-10">
                <input disabled name="Content" value="@Model.Content" type="text" class="form-control" />
            </div>
        </div>
        <div class="position-relative row form-group">
            <label for="Content" class="col-sm-2 col-form-label">Onay</label>
            <div class="col-sm-10">
                @Html.CheckBoxFor(model => model.Confirmation, htmlAttributes:new { @checked = true, @class="form-control" })
            </div>
        </div>
        <div class="position-relative row form-group">
            <label for="Content" class="col-sm-2 col-form-label">Yorum</label>
            <div class="col-sm-10">
                <input disabled name="Content" value="@Model.Blog.Title" type="text" class="form-control" />
            </div>
        </div>
        <div class="position-relative row form-check">
            <div class="col-sm-10 offset-sm-2">
                <button class="btn btn-secondary">Kaydet</button>
                <a href="/Comment/Index" class="btn btn-light">Geri Dön</a>
            </div>
        </div>
    </form>
</div>


