@model BlogSite.Models.Blog

@{
    ViewBag.Title = "Blog Düzenle";
}

<div class="card-body">
    <h5 class="card-title">Blog Düzenleme Sayfası</h5>
    <form class="" method="post" action="/BlogPost/Edit/@Model.BlogId" enctype="multipart/form-data">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.BlogId)
        <div class="position-relative row form-group">
            <label for="Title" class="col-sm-2 col-form-label">Blog Adı</label>
            <div class="col-sm-10">
                <input name="Title" value="@Model.Title" placeholder="Blog Başlığını yazınız" type="text" class="form-control" />
            </div>
        </div>
        <div class="position-relative row form-group">
            <label for="Content" class="col-sm-2 col-form-label">Blog İçeriği</label>
            <div class="col-sm-10">
                <textarea name="Content" class="ckeditor">@Model.Content</textarea>
            </div>
        </div>
        <div class="position-relative row form-group">
            <label for="PicURL" class="col-sm-2 col-form-label">Blog Resmi</label>
            <div class="col-sm-10">
                <input name="PicURL" value="@Model.PicURL" accept=".png,.jpg,.jpeg" type="file" class="form-control" />
            </div>
        </div>
        <div class="position-relative row form-group">
            <label for="Category" class="col-sm-2 col-form-label">Blog Kategorisi</label>
            <div class="col-sm-10">
                @Html.DropDownList("CategoryId", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="position-relative row form-check">
            <div class="col-sm-10 offset-sm-2">
                <button class="btn btn-secondary">Kaydet</button>
                <a href="/BlogPost/Index" class="btn btn-light">Geri Dön</a>
            </div>
        </div>
    </form>
</div>
