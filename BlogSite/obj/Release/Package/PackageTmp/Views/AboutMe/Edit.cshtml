@model BlogSite.Models.AboutMe

@{
    ViewBag.Title = "Hakkımda Düzenle";
}
<div class="card-body">
    <h5 class="card-title">Hakkımda Kısmı</h5>
    <form class="" method="post" action="/AboutMe/Edit/@Model.AboutMeId">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AboutMeId)
        <div class="position-relative row form-group">
            <label for="exampleTitle" class="col-sm-2 col-form-label">Başlık</label>
            <div class="col-sm-10">
                <input name="Title" value="@Model.Title" placeholder="Başlığı yazınız" type="text" class="form-control" />
            </div>
        </div>
        <div class="position-relative row form-group">
            <label for="exampleExplanation" class="col-sm-2 col-form-label">Hakkımda Kısmı</label>
            <div class="col-sm-10">
                <textarea name="Explanation" class="ckeditor">@Model.Explanation</textarea>
            </div>
        </div>
        <div class="position-relative row form-check">
            <div class="col-sm-10 offset-sm-2">
                <button class="btn btn-secondary">Kaydet</button>
                <a href="/AboutMe/Index" class="btn btn-light">Geri Dön</a>
            </div>
        </div>
    </form>
</div>
