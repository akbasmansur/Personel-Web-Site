@model IEnumerable<BlogSite.Models.Quote>

@{
    ViewBag.Title = "Sözler Sayfası";
}
<div class="app-main__inner">
    <div class="row">
        <div class="col-lg-12">
            <a href="/Quote/Create" class="mb-2 mr-2 btn btn-warning">Yeni Ekle</a>
            <div class="main-card mb-3 card">
                <div class="card-body">
                    <h5 class="card-title">Sözler</h5>
                    <table class="mb-0 table">
                        <thead>
                            <tr>
                                <th>Söz</th>
                                <th>Söyleyen Kişi</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.TheQuote)</td>
                                    <td>@Html.DisplayFor(modelItem => item.QuoteOwner)</td>
                                    <td>
                                        <a href="/Quote/Edit/@item.QuoteId" class="mb-2 mr-2 btn btn-info">Düzelt</a>
                                        <a href="/Quote/Delete/@item.QuoteId" class="mb-2 mr-2 btn btn-danger">Sil</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
