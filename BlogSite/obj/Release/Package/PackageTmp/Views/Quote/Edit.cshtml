@model BlogSite.Models.Quote

@{
    ViewBag.Title = "Sözleri Düzenle";
}

<div class="card-body">
    <h5 class="card-title">Sözler</h5>
    <form class="" method="post" action="/Quote/Edit/@Model.QuoteId">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.QuoteId)
        <div class="position-relative row form-group">
            <label for="exampleQuoteOwner" class="col-sm-2 col-form-label">Söyleyen Kişi</label>
            <div class="col-sm-10">
                <input name="QuoteOwner" id="exampleQuoteOwner" value="@Model.QuoteOwner" placeholder="Sözün sahibini yazınız" type="text" class="form-control" />
            </div>
        </div>
        <div class="position-relative row form-group">
            <label for="exampleQuote" class="col-sm-2 col-form-label">Söz</label>
            <div class="col-sm-10">
                <textarea name="TheQuote" class="form-control">@Model.TheQuote</textarea>
            </div>
        </div>
        <div class="position-relative row form-check">
            <div class="col-sm-10 offset-sm-2">
                <button class="btn btn-secondary">Kaydet</button>
                <a href="/Quote/Index" class="btn btn-light">Geri Dön</a>
            </div>
        </div>
    </form>
</div>
