@model BlogSite.Models.Category

@{
    ViewBag.Title = "Kategorileri Düzenle";
}

<div class="card-body">
    <h5 class="card-title">Kategori</h5>
    <form class="" method="post" action="/Category/Edit/@Model.CategoryId">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CategoryId)
        <div class="position-relative row form-group">
            <label for="CategoryName" class="col-sm-2 col-form-label">Kategori Adı</label>
            <div class="col-sm-10">
                <input name="CategoryName" value="@Model.CategoryName" type="text" class="form-control" />
            </div>
        </div>
        <div class="position-relative row form-group">
            <label for="Description" class="col-sm-2 col-form-label">Açıklama</label>
            <div class="col-sm-10">
                <textarea name="Description" class="form-control">@Model.Description</textarea>
            </div>
        </div>
        <div class="position-relative row form-check">
            <div class="col-sm-10 offset-sm-2">
                <button class="btn btn-secondary">Kaydet</button>
                <a href="/Category/Index" class="btn btn-light">Geri Dön</a>
            </div>
        </div>
    </form>
</div>
