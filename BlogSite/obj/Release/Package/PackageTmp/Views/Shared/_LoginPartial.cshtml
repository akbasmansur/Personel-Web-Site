@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "widget-content-left  ml-2" }))
    {
        @Html.AntiForgeryToken()

        <div class="header-btn-lg pr-0">
            <div class="widget-content p-0">
                <div class="widget-content-wrapper">
                    <div class="widget-content-left">
                        <div class="btn-group">
                            <a data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="p-0 btn">
                                <img width="42" class="rounded-circle" src="~/Content/architectui/assets/images/avatars/ben1.png" alt="">
                                <i class="fa fa-angle-down ml-2 opacity-8"></i>
                            </a>
                            <div tabindex="-1" role="menu" aria-hidden="true" class="dropdown-menu dropdown-menu-right">
                                <a href="/Account/ResetPassword" tabindex="0" class="dropdown-item">Parolayı Değiştir</a>
                                <a href="javascript:document.getElementById('logoutForm').submit()" tabindex="0" class="dropdown-item">Güvenli Çıkış</a>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content-left  ml-3 header-user-info">
                        <div class="widget-heading">
                            @Html.ActionLink(User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                        </div>
                        <div class="widget-subheading">
                            Site Yöneticisi
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
